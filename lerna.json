{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "src"
      ]
    },
    "bootstrap": {
      "ignore": "src-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "version": "0.0.30",
  "npmClient": "npm"
}
